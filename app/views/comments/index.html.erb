<%= turbo_frame_tag "comments_section#{@post.id}" do %>
  <div class="ps-5">
    <div class="header">
      <%= link_to "New Comment",
                  new_post_comment_path,
                  class: "btn btn-success my-3",
                  data: { turbo_frame: dom_id(@post.comments.new) } %>
    </div>

    <%= turbo_frame_tag dom_id(@post.comments.new) %>
    
    <%= turbo_frame_tag "comments" do %>
      <%= render @comments %>
    <% end %>
  </div>
<% end %>
